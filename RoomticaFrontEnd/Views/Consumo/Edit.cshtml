@model RoomticaFrontEnd.Models.ConsumoModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container-xl pb-4 pt-2">
    <h2>Editar Consumo</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="id_reserva" class="control-label"></label>
                    <select asp-for="id_reserva" asp-items="@ViewBag.reserva" class="form-select"></select>
                    <span asp-validation-for="id_reserva" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="id_producto" class="control-label"></label>
                    <select asp-for="id_producto" asp-items="@ViewBag.producto" class="form-select"></select>
                    <span asp-validation-for="id_producto" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="cantidad" class="control-label"></label>
                    <input asp-for="cantidad" class="form-control" />
                    <span asp-validation-for="cantidad" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="precio_venta" class="control-label"></label>
                    <input asp-for="precio_venta" class="form-control" />
                    <span asp-validation-for="precio_venta" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <input type="submit" value="Editar" class="btn btn-primary" />
                    <a asp-action="Listar" class="btn btn-warning">Volver al Listado</a>
                </div>
            </form>
        </div>
    </div>
    <div>
        <span class="text-danger fw-bold">@ViewBag.mensaje</span>
    </div>
    <div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

</div>