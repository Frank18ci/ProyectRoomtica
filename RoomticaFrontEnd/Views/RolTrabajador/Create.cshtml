@model RoomticaFrontEnd.Models.RolTrabajadorModel

@{
    ViewData["Title"] = "Create";
}

<div class="container-xl pb-4 pt-2">
    <h2>Registrar Rol Trabajador</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Rol" class="control-label"></label>
                    <input asp-for="Rol" class="form-control" />
                    <span asp-validation-for="Rol" class="text-danger"></span>
                </div>               
                <div class="form-group mt-2">
                    <a asp-action="Create" class="btn btn-success">Nuevo</a>
                    <input type="submit" value="Registrar" class="btn btn-primary" />
                    <a asp-action="Listar" class="btn btn-warning">Volver al Listado</a>
                </div>
            </form>
        </div>
    </div>
    <div>
        <span class="text-danger fw-bold">@ViewBag.mensaje</span>
    </div>
    <div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

</div>