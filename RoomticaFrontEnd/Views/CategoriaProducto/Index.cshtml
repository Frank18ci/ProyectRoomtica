@model IEnumerable<RoomticaFrontEnd.Models.CategoriaProductoModel>
@{
    ViewData["Title"] = "Listar Caracteristicas Habitacion";
}
<h1>Listar Caracteristicas Habitacion</h1>
<div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Categoria</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Categoria</td>
                    <td>
                        <a asp-action="Detail" asp-route-id="@item.Id">Detail</a> |
                        <a asp-action="Editar" asp-route-id="@item.Id">Editar</a> |
                        <a asp-action="Eliminar" asp-route-id="@item.Id">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Crear">Crear Nueva Caracteristica Habitacion</a>
</div>
